<?xml version="1.0" encoding="utf-8"?>
    <com.google.android.material.card.MaterialCardView

 xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    android:backgroundTint="@color/primary1"
    android:layout_margin="16dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="40dp"



    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="32dp"
            android:gravity="center"

            >


            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/earth_number"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"


                />

            <ImageView
                    android:id="@+id/iv_planet"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    app:srcCompat="@drawable/earth"
                    android:layout_margin="20dp"

                />


            <TextView
                android:id="@+id/tv_moons"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/earth_moons"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tv_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/earth_size"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/tv_arabic"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/earth_in_Arabic"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold"


                />

        </LinearLayout>


</com.google.android.material.card.MaterialCardView>